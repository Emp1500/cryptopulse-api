<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Crypto Graphs</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/chart.css">
  <link rel="stylesheet" href="/css/other.css">
</head>
<body>
  <%- include('partials/header') %>
  <div class="containerCharts py-5">
    <h1 class="text-center mb-4">Live Crypto Graphs</h1>
    <p class="text-center text-light">Real-time price charts for Bitcoin, Ethereum, BNB and XRP (30-day history).</p>

    <div class="ForGraphs">
      <div id="graphsArea" class="row row-cols-1 row-cols-md-2 g-4">
        <div class="col">
          <div class="card shadow-sm">
            <div class="card-body">
              <h5 class="card-title">Bitcoin (BTC)</h5>
              <div id="btcLoading" class="text-center py-3">Loading...</div>
              <canvas id="btcChart"></canvas>
            </div>
          </div>
        </div>
        <div class="col">
          <div class="card shadow-sm">
            <div class="card-body">
              <h5 class="card-title">Ethereum (ETH)</h5>
              <div id="ethLoading" class="text-center py-3">Loading...</div>
              <canvas id="ethChart"></canvas>
            </div>
          </div>
        </div>
        <div class="col">
          <div class="card shadow-sm">
            <div class="card-body">
              <h5 class="card-title">BNB</h5>
              <div id="bnbLoading" class="text-center py-3">Loading...</div>
              <canvas id="bnbChart"></canvas>
            </div>
          </div>
        </div>
        <div class="col">
          <div class="card shadow-sm">
            <div class="card-body">
              <h5 class="card-title">XRP</h5>
              <div id="xrpLoading" class="text-center py-3">Loading...</div>
              <canvas id="xrpChart"></canvas>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Chart.js -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function () {
        // Coin configurations
        const coins = [
            { id: 'bitcoin', symbol: 'BTC', canvasId: 'btcChart', loadingId: 'btcLoading', color: '#f7931a' },
            { id: 'ethereum', symbol: 'ETH', canvasId: 'ethChart', loadingId: 'ethLoading', color: '#627eea' },
            { id: 'binancecoin', symbol: 'BNB', canvasId: 'bnbChart', loadingId: 'bnbLoading', color: '#f0b90b' },
            { id: 'ripple', symbol: 'XRP', canvasId: 'xrpChart', loadingId: 'xrpLoading', color: '#23292f' }
        ];

        // Fetch historical data and create chart
        async function fetchAndCreateChart(coin) {
            const loadingEl = document.getElementById(coin.loadingId);
            const canvasEl = document.getElementById(coin.canvasId);

            try {
                // Fetch 30 days of historical data
                const response = await fetch(
                    `https://api.coingecko.com/api/v3/coins/${coin.id}/market_chart?vs_currency=usd&days=30`
                );

                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }

                const data = await response.json();

                // Extract prices (data.prices is array of [timestamp, price])
                const prices = data.prices;

                // Create labels (dates) and values (prices)
                const labels = prices.map(p => {
                    const date = new Date(p[0]);
                    return date.toLocaleDateString('en-US', { month: 'short', day: 'numeric' });
                });
                const values = prices.map(p => p[1]);

                // Sample data to reduce points (every 6th point for ~5 points per day)
                const sampledLabels = labels.filter((_, i) => i % 6 === 0);
                const sampledValues = values.filter((_, i) => i % 6 === 0);

                // Hide loading, show canvas
                loadingEl.style.display = 'none';
                canvasEl.style.display = 'block';

                // Create chart
                const ctx = canvasEl.getContext('2d');
                new Chart(ctx, {
                    type: 'line',
                    data: {
                        labels: sampledLabels,
                        datasets: [{
                            label: `${coin.symbol} Price (USD)`,
                            data: sampledValues,
                            borderColor: coin.color,
                            backgroundColor: coin.color + '20',
                            borderWidth: 2,
                            fill: true,
                            tension: 0.3,
                            pointRadius: 0,
                            pointHoverRadius: 5
                        }]
                    },
                    options: {
                        responsive: true,
                        plugins: {
                            legend: {
                                display: true,
                                labels: {
                                    color: '#c9d1d9'
                                }
                            },
                            tooltip: {
                                callbacks: {
                                    label: function(context) {
                                        return '$' + context.parsed.y.toLocaleString('en-US', {
                                            minimumFractionDigits: 2,
                                            maximumFractionDigits: 2
                                        });
                                    }
                                }
                            }
                        },
                        scales: {
                            x: {
                                ticks: {
                                    color: '#8b949e',
                                    maxTicksLimit: 8
                                },
                                grid: {
                                    color: '#30363d'
                                }
                            },
                            y: {
                                ticks: {
                                    color: '#8b949e',
                                    callback: function(value) {
                                        return '$' + value.toLocaleString();
                                    }
                                },
                                grid: {
                                    color: '#30363d'
                                }
                            }
                        }
                    }
                });

            } catch (error) {
                console.error(`Error fetching ${coin.symbol} data:`, error);
                loadingEl.innerHTML = `<span class="text-danger">Failed to load ${coin.symbol} data</span>`;
            }
        }

        // Fetch all charts with slight delays to avoid rate limiting
        coins.forEach((coin, index) => {
            setTimeout(() => {
                fetchAndCreateChart(coin);
            }, index * 500); // 500ms delay between each request
        });
    });
  </script>

  <%- include('partials/footer') %>
</body>
</html>
